{{> header}}

<div class="container animate-bottom fullpage">
  <div id="loader"></div>
  <div id="before-join" class="hide">
    <h2 class="text-center">Ready to join a <span><img src="/static/img/img_logo.png" alt="" width="100"
                                                       height="50"></span> chat?</h2>
    <p class="text-center">RTConn is truly simple video chat and screen sharing for groups.</p>
    <div class="animate-bottom mt-5">
      <div class="row">
        <div class="offset-md-2 col-md-4 bg-dark">
          <video id="myVideo"></video>
        </div>
        <div class="col-md-3">
          <form action="" method="POST" id="cameraForm">
            <div class="form-group">
              <label for="camera"><i class="fa fa-video"></i> Camera:</label>
              <select name="camera" id="cameras" class="form-control">
                <option value="">HP TrueVision HD</option>
                <option value="">None</option>
              </select>
            </div>
            <div class="form-group">
              <label for="mic"><i class="fas fa-microphone"></i> Audio:</label>
              <select name="mics" id="mics" class="form-control">
                <option value="">Default</option>
                <option value="">Built-in Audio Analog Stereo</option>
              </select>
            </div>
            <div class="form-group">
              <input type="submit" class="btn btn-primary">
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="jumbotron hide" id="after-join">
    <div class="row">
      <aside class="col-md-2">
        <a href="#" class="btn btn-primary mb-2"><i class="fas fa-link"></i> Invite</a>
        <a href="#" class="btn btn-secondary"><i class="fas fa-lock"></i> Lock</a>
        <a href="#" class="btn btn-secondary mb-2"><i class="fas fa-phone"></i> Leave</a>
        <div class="bg-dark mb-2"></div>
      </aside>
      chat
      <article class="col-md-10"></article>
    </div>
  </div>

</div>


{{>footer}}
{{#contentFor 'pageScripts'}}
  <script src="/static/js/chat.js"></script>
{{/contentFor}}

